@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form method="post" action="/home/login">
            <div class="form-group">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" name="email" value="" class="form-control" id="email" placeholder="Digite o seu e-mail">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="senha" class="form-label">E-mail</label>
                <input type="text" name="senha" value="" class="form-control" id="senha" placeholder="Digite a sua senha">
                @Html.ValidationMessage("senha")
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
        @ViewBag.Mensagem
    </div>
</body>
</html>
